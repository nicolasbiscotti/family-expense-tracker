rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check authentication
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Root level rules (for local development)
    match /expenses/{familyId}/{allPaths=**} {
      // Read: Only family members can view receipts
      allow read: if isAuthenticated();
      
      // Write: Only authenticated users can upload
      allow write: if isAuthenticated() &&
        // Max file size: 10MB
        request.resource.size < 10 * 1024 * 1024 &&
        // Only allow image types
        request.resource.contentType.matches('image/.*');
    }
    
    // Environment-scoped rules (for preview/production)
    match /environments/{environment}/expenses/{familyId}/{allPaths=**} {
      allow read: if isAuthenticated();
      
      allow write: if isAuthenticated() &&
        request.resource.size < 10 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
    }
  }
}
