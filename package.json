{
  "name": "family-expense-tracker",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:emulator": "VITE_APP_ENV=local vite",
    "build": "tsc && vite build",
    "build:preview": "VITE_APP_ENV=preview tsc && vite build",
    "build:production": "VITE_APP_ENV=production tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,css,html}\"",
    "firebase:emulators": "firebase emulators:start",
    "analyze": "vite build && open dist/stats.html"
  },
  "dependencies": {
    "firebase": "^10.7.1",
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "firebase-tools": "^13.0.2",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0",
    "web-vitals": "^3.5.1"
  }
}
